# Campus Security System - Production Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:your-secure-password@postgres:5432/campus_security
POSTGRES_PASSWORD=your-secure-password

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO/S3 Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
AWS_S3_BUCKET=campus-security-evidence
AWS_S3_REGION=us-east-1

# JWT and Security
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters
ENCRYPTION_KEY=your-encryption-key-32-characters

# Application Configuration
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
DEBUG=false

# CORS Configuration
CORS_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]
ALLOWED_HOSTS=["your-domain.com", "www.your-domain.com"]

# Notification Services
FCM_SERVER_KEY=your-firebase-cloud-messaging-server-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
SENDGRID_API_KEY=your-sendgrid-api-key

# SSO/SAML Configuration
SAML_ENTITY_ID=https://your-domain.com/saml
SAML_SSO_URL=https://your-sso-provider.com/saml/sso
SAML_X509_CERT=your-saml-certificate

# Monitoring and Analytics
GRAFANA_PASSWORD=your-grafana-password
PROMETHEUS_RETENTION=200h

# Privacy Service Configuration
PRIVACY_ZONE_TTL=86400
FACE_DETECTION_CONFIDENCE=0.9
BLUR_STRENGTH=50

# Edge Services Configuration
CORE_API_URL=https://your-domain.com/api/v1
GPU_ENABLED=true
MODEL_PATH=/app/models/yolov8n.pt
CAMERA_RTSP_URLS=rtsp://camera1.local/stream,rtsp://camera2.local/stream

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Limits
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=mp4,avi,mov,mkv,jpg,jpeg,png

# Backup and Disaster Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Compliance Configuration
GDPR_ENABLED=true
FERPA_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=100M

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_PROTOCOLS=TLSv1.2,TLSv1.3

# Alerting Configuration
ALERT_EMAIL_FROM=alerts@your-domain.com
ALERT_EMAIL_TO=security@your-domain.com
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts

# Model Configuration
MODEL_CONFIDENCE_THRESHOLD=0.7
FALSE_POSITIVE_THRESHOLD=0.3
DETECTION_CLASSES=person,vehicle,weapon,bag

# Camera Configuration
CAMERA_TIMEOUT=30
STREAM_BUFFER_SIZE=1024
FRAME_SKIP=1
DETECTION_INTERVAL=1

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
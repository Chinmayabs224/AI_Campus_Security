# Environment Configuration
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Database Settings
DATABASE_URL=postgresql://campus_security:password@localhost:5432/campus_security
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Settings
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# MinIO/S3 Settings
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
EVIDENCE_BUCKET=evidence

# SSO/SAML Settings (optional)
# SAML_ENTITY_ID=
# SAML_SSO_URL=
# SAML_X509_CERT=

# Notification Service
NOTIFICATION_SERVICE_URL=http://localhost:8001

# Edge Device Settings
EDGE_DEVICE_TOKEN_EXPIRE_HOURS=24